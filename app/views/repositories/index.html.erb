<div class="max-w-4xl mx-auto p-6">
  <div id="flash_messages"></div>
  <div class="bg-white shadow rounded-lg">
    <div class="px-6 py-4 border-b border-gray-200">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-2xl font-bold text-gray-900">Repository Management</h1>
          <p class="mt-1 text-sm text-gray-600">Manage repositories to monitor for active pull requests</p>
        </div>
        <% if @repositories.any? %>
          <%= button_to "Sync All Repositories", sync_all_repositories_path,
              method: :post,
              class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-md transition-colors",
              data: { turbo_method: :post },
              form: { data: { turbo_frame: "_top" } } %>
        <% end %>
      </div>
    </div>

    <!-- Add Repository Form -->
    <%= render "repositories/form", repository: @repository %>

    <!-- Repository List -->
    <%= render "repositories/list", repositories: @repositories %>
  </div>
</div>
